<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ayabeltran.furnitureapp.MaximizedView">

    <ImageView
        android:id="@+id/displayimage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/displaytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/displaycost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/displayimage"
        android:layout_below="@+id/displayimage"
        android:layout_marginTop="36dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/displaydecription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/displaycost"
        android:layout_below="@+id/displaycost"
        android:layout_marginTop="27dp"
        android:text="TextView" />
</RelativeLayout>
