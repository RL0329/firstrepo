<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorPrimary"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/furnitureimage"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="58dp"
        android:src="@drawable/tokyo" />

    <TextView
        android:id="@+id/furniturename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/furnitureprice"
        android:layout_alignTop="@+id/furnitureimage"
        android:text="TextView"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/furnitureprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/furnitureimage"
        android:layout_marginBottom="26dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/furnitureimage"
        android:textSize="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/furnituredescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/furnitureimage"
        android:layout_below="@+id/furnitureimage"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:textSize="18dp"
        android:textStyle="italic" />


</RelativeLayout>
